<div>
    <div class="overview">
        <div class="overview-song">
            <div class="overview-track_current">
                <h3>The current track: </h3>
                <p id="currenttrack">trackname</p>
            </div>
            <div class="overview-song-owner responsive">
                <img src="~/media/gifs/cd.gif" class="track-image" style="height: auto;
    width: 100%;" />
                <audio autoplay id="audio">
                    
                </audio>
            </div>

            <div class="overview-track_current">
                <h3>The next track:</h3>
                <p id="nexttrack">trackname</p>
                <button>
                    Queue
                </button>
                <button>
                    + add track
                </button>
            </div>
        </div>
        <div class="overview-features">
            <div class="tracks-query">
                <h4>
                    Wachtrij
                </h4>
                <ul id="playlist">
                </ul>
            </div>
            <div class="tracks-collection">
                <h4>
                    Tracklist
                </h4>
                <ul id="tracklist">
                
                </ul>
                <button id="select">Select</button>
            </div>
            <div id="chatbox" class="overview-features-chatbox">
                <h4>
                    Chatbox:
                </h4>
                <ul id="messagesList"></ul>
                <div class="chatbox-input">
                    <div >Message</div>
                        <div><input type="text" id="messageInput" /></div>
                    </div>
                <div>
                    <div class="col-6 text-end">
                        <input type="button" id="sendButton" value="Send Message" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
